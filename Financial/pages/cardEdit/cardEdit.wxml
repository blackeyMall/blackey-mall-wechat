            <view class="name">个人标签</view>
            <view class="operator">
                <view class="iconfont icon-edit"></view>
                <view class="text">编辑</view>
            </view>
        </view>
        <view class="item">
            <view class="label-list">
                <block wx:if="{{cardInfo.tags.length !== 0}}">
                    <view wx:for="{{cardInfo.tags}}" class="label-item">{{item}}</view>
                </block>
