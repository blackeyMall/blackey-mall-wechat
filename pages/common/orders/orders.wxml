<view class="order-list">
    <view class="item" wx:for="{{orderList}}" wx:key="{{item.index}}" bindtap="orderDetail">
        <view class="item-image">
            <image src="{{item.imgUrl}}" class="img" mode="widthFix" />
        </view>
        <view class="item-info">
            <view class="item-title">
                {{item.title}}
            </view>
            <view class="item-des">
                {{item.des}}
            </view>
        </view>
        <view class="item-operator">
            <view class="div">
                <view class="text-danger">
                    <view class="item-price">{{item.price}}</view>
                    <view class="item-count">x {{item.count}}</view>
                </view>
                <view class="label label-{{item.statusClass}}">{{item.status}}</view>
            </view>
        </view>
    </view>
</view>