.tab-nav {
  display: flex;
  margin: 20rpx 0 40rpx;
  font-size: 28rpx;
  text-align: center;
}
.tab-nav .item {
  padding: 16rpx 30rpx;
  border-radius: 6rpx;
  background-color: #fff;
}
.tab-nav .item.active {
  background-color: #4454cd;
  color: #fff;
}
.tab-nav .item + .item {
  margin-left: 20rpx;
}
.tab-content {
  font-size: 24rpx;
}
