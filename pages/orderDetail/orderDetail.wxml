<!--pages/reservationDetail/reservationDetail.wxml-->
<view class="title-page">
    <view class="div">
        <view>订单详情</view>
        <view class="label label-primary">{{orderInfo.statusname}}</view>
    </view>
    <image src="{{orderInfo.url}}" class="avatar-img" mode="aspectFit" />
</view>
<view class="container">
    <view class="order-detail">
        <view class="div time-line">
            <view class="item" wx:for="{{orderData.timeLine}}">
                <view class="div">
                    <text class="date">{{item.date}}</text>
                    <view class="content">
                        <text class="title">{{item.name}}</text>
                        <text class="des">{{item.des}}</text>
                        <view class="img-list">
                            <image class="" src="{{item}}" wx:for="{{item.imgList}}" mode="widthFix" />
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="div materials">
            <view class="item">
                <image class="" src="" mode="aspectFill" />
                <view class="content">
                    <text class="title">水泥</text>
                    <text class="des">粉刷墙面</text>
                </view>
            </view>
        </view>
    </view>
</view>
<view class="btn">申请售后</view>