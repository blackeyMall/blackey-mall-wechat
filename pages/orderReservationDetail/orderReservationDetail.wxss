.avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 40rpx auto 0;
  border-radius: 50%;
  overflow: hidden;
}
.form {
  width: 80%;
  margin: 60rpx auto;
}
.form-group {
  position: relative;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 0 10rpx rgba(15, 14, 107, 0.1);
  transition: all .3s linear;
}
.form-group.active {
  box-shadow: 0 0 10rpx #4454cd;
}
.form-group input {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  line-height: 1;
  border-radius: 12rpx;
  transition: all .3s linear;
}
.form-group.active input {
  padding: 34rpx 30rpx 6rpx;
}
.form-group label {
  position: absolute;
  top: 50%;
  left: 30rpx;
  color: #cbcbcb;
  font-size: 28rpx;
  transform: translateY(-50%);
  background-color: #fff;
  transition: all .3s linear;
}
.form-group.active label {
  top: 10rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  transform: translateY(0);
  color: #4454cd;
}
.form-group + .form-group {
  margin-top: 30rpx;
}
.form-btn {
  margin-top: 50rpx;
}
.form-btn .btn {
  width: 60%;
  margin: 0 auto;
  padding: 16rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #4454cd;
  color: #fff;
  border-radius: 80rpx;
}
.circle {
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  z-index: -1;
}
.circle-pink {
  top: 30%;
  left: 40rpx;
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #ff8ea0;
  background-color: rgba(255, 142, 160, 0.5);
}
.circle-purple {
  bottom: 20%;
  left: 35%;
  width: 260rpx;
  height: 260rpx;
  border: 1rpx solid #e254e2;
  background-color: rgba(226, 84, 226, 0.25);
}
.circle-blue {
  top: 40%;
  right: 40rpx;
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #4454cd;
  background-color: rgba(68, 84, 205, 0.4);
}
