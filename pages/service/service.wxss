.service-list {
  display: flex;
  flex-wrap: wrap;
  margin-left: -16rpx;
  margin-right: -16rpx;
}
.service-list .item {
  flex: 0 0 33.33333%;
  padding: 16rpx;
  text-align: center;
  box-sizing: border-box;
  font-size: 28rpx;
}
.service-list .item-content {
  position: relative;
  top: 0;
  padding: 20rpx;
  background-color: #eee;
  background-image: linear-gradient(to right bottom, #efefef 40%, rgba(68, 84, 205, 0.2));
  border-radius: 16rpx;
  box-shadow: 0 0 20rpx rgba(147, 166, 179, 0.5);
  transition: all .1s;
  box-shadow: 0 8rpx 0 rgba(68, 84, 205, 0.2), 0 10rpx 0 rgba(68, 84, 205, 0.3);
}
.service-list .item-content.active {
  top: 8rpx;
  box-shadow: 0 2rpx 0 rgba(68, 84, 205, 0.2), 0 4rpx 0 rgba(68, 84, 205, 0.3);
}
.service-list .item-img {
  width: 100rpx;
  height: 100rpx;
}
