/**index.wxss**/
.swiper {
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 30rpx rgba(147, 166, 179, 0.8);
  border-radius: 12rpx;
  overflow: hidden;
}
.swiper .swiper-item {
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.swiper .slide-image {
  position: relative;
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
}
.contact {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  padding: 10rpx;
  font-size: 28rpx;
  color: #000;
  background-color: #f8f8f8;
  box-shadow: 0 0 16rpx rgba(147, 166, 179, 0.3);
  border-radius: 16rpx;
}
.contact .btn {
  padding: 10rpx 30rpx;
  transition: all .1s;
}
.contact .btn.active {
  color: #4454cd;
}
.contact .div {
  display: flex;
  align-items: center;
}
.contact .iconfont {
  margin-right: 10rpx;
}
