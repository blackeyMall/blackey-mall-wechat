/**index.wxss**/
.container {
  flex: 0 0 auto;
}
.swiper {
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 30rpx rgba(147, 166, 179, 0.8);
  border-radius: 12rpx;
  overflow: hidden;
}
.swiper .swiper-item {
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.swiper .slide-image {
  position: relative;
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
}
.order {
  padding: 20rpx;
}
.order.empty {
  flex: 1;
}
.order.empty .div {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 100%;
}
