/**index.wxss**/
.container {
  flex: 0 0 auto;
}
.swiper {
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 30rpx rgba(147, 166, 179, 0.8);
  border-radius: 12rpx;
  overflow: hidden;
}
.swiper .swiper-item {
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.swiper .slide-image {
  width: 100%;
}
.order {
  padding: 20rpx;
}
.order.empty {
  flex: 1;
}
.order.empty .div {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 100%;
}
.leayer {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-tel {
  width: 80%;
  max-width: 700rpx;
  background-color: #fff;
  box-shadow: 0 0 30rpx rgba(147, 166, 179, 0.3);
  border-radius: 16rpx;
}
.modal-tel .modal-body {
  padding: 60rpx 40rpx;
}
.modal-tel .modal-body .label-input {
  font-size: 24rpx;
  color: #4454cd;
}
.modal-tel .modal-body input {
  padding: 20rpx 0;
  font-size: 32rpx;
  border-bottom: 2rpx solid #efefef;
  border-radius: 8rpx;
}
.modal-tel .modal-body .inputFocus {
  border-bottom-color: #4454cd;
}
.modal-tel .modal-body .btn-cancel {
  width: 60%;
  margin: 40rpx auto 0;
  padding: 20rpx;
  text-align: center;
  background-color: #4454cd;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
}
